{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends":[
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "indent": ["error", 2],
        "no-unused-vars": ["error", { "args": "none" }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "globals": ["React"],
        "react/jsx-uses-vars": "error",
        "react/prop-types": "off"
    }
}